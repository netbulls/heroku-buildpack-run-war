#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

# fail fast
set -e

BUILD_DIR=$1

# load common necessary to install java
curl --silent --location http://heroku-jvm-common.s3.amazonaws.com/jvm-buildpack-common.tar.gz | tar xzm
. bin/java

# install JDK
javaVersion=$(detect_java_version ${BUILD_DIR})
echo -n "-----> Installing OpenJDK ${javaVersion}..."
install_java ${BUILD_DIR} ${javaVersion}
echo "done"

# download webapp-runner
wget -O $BUILD_DIR/webapp-runner.jar http://search.maven.org/remotecontent?filepath=com/github/jsimone/webapp-runner/7.0.40.1/webapp-runner-7.0.40.1.jar
